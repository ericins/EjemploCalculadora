<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.ericcity.bandera.Reproductor"
    android:id="@+id/rl">

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/play"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="onClick"
        android:src="@drawable/ic_action_play"
        />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/pause"
        android:onClick="onClick"
        android:src="@drawable/ic_action_pause"
        android:layout_alignTop="@+id/play"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/stop"
        android:onClick="onClick"
        android:src="@drawable/ic_action_stop"
        android:layout_alignTop="@+id/play"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/progressBar"
        android:layout_above="@+id/play"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="XI - Parousia"
        android:id="@+id/textView10"
        android:gravity="center_vertical|center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/buttpar"
        android:layout_toEndOf="@+id/buttpar" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/buttpar"
        android:onClick="onClick"
        android:src="@android:drawable/ic_media_play"
        android:layout_alignTop="@+id/textView10" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/buthal"
        android:onClick="onClick"
        android:src="@android:drawable/ic_media_play"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/play"
        android:layout_alignEnd="@+id/play" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="XI - halcyon"
        android:id="@+id/textView13"
        android:gravity="center_vertical|center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/buthal"
        android:layout_toEndOf="@+id/buthal" />

</RelativeLayout>
